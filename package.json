{
  "name": "yahuah-dabar-server",
  "version": "1.0.0",
  "description": "Complete Bible app with special Hebrew names for books and chapters. Includes 77 books from Old Covenant, Apocrypha, and Renewed Covenant. Needs admin backend for scripture updates and content managemen",
  "main": "server.js",
  "repository": "https://github.com/Gsoft-Interactive-Systems/bible-server.git",
  "author": "Gsoft interactive tech",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "dev:build": "tsc",
    "start": "node dist/server.js",
    "pm2:start": "pm2 start dist/server.js --name yahuah-dabar-server",
    "pm2:restart": "pm2 restart yahuah-dabar-server",
    "pm2:stop": "pm2 stop yahuah-dabar-server",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "seed": "ts-node scripts/seed.ts",
    "postinstall": "prisma dp push && tsc && prisma generat && ts-node scripts/seed.ts"
  },
  "private": true,
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "argon2": "^0.44.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto-random-string": "^5.0.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "figlet": "^1.8.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "pm2": "^6.0.10",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/figlet": "^1.7.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
